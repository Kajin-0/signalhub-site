{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Pain Feed Envelope",
  "type": "object",
  "properties": {
    "feed_id": {
      "type": "string",
      "description": "Unique identifier for this feed."
    },
    "feed_version": {
      "type": "string",
      "description": "Semantic version of the feed schema."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this batch was generated (ISO 8601)."
    },
    "cadence": {
      "type": "string",
      "description": "Expected update frequency (e.g. hourly, daily)."
    },
    "confidence_method": {
      "type": "string",
      "description": "Freeâ€‘form description of how confidence scores are derived."
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/BusinessPainItem"
      }
    }
  },
  "required": ["feed_id", "feed_version", "generated_at", "items"],
  "definitions": {
    "BusinessPainItem": {
      "type": "object",
      "properties": {
        "entity": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "name": { "type": "string" },
            "domain": { "type": "string" }
          },
          "required": ["type", "name"]
        },
        "pain_category": { "type": "string" },
        "severity": { "type": "number", "minimum": 0, "maximum": 10 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "signals": {
          "type": "array",
          "items": { "type": "string" }
        },
        "first_seen": { "type": "string", "format": "date" },
        "last_confirmed": { "type": "string", "format": "date" },
        "actionability": {
          "type": "object",
          "properties": {
            "urgency_days": { "type": "integer", "minimum": 0 },
            "budget_estimate_usd": {
              "type": "array",
              "items": { "type": "number", "minimum": 0 },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "required": ["urgency_days", "budget_estimate_usd"]
        },

        /* New fields for richer business pain semantics */
        "impact": {
          "type": "object",
          "properties": {
            "revenue": {
              "type": "string",
              "enum": ["high", "medium", "low", "unknown"]
            },
            "customers": {
              "type": "string",
              "enum": ["high", "medium", "low", "unknown"]
            },
            "operations": {
              "type": "string",
              "enum": ["high", "medium", "low", "unknown"]
            },
            "compliance": {
              "type": "string",
              "enum": ["high", "medium", "low", "none"]
            }
          },
          "required": ["revenue", "customers", "operations", "compliance"]
        },
        "relevant_roles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "time_sensitivity": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["ongoing", "resolved", "intermittent"]
            },
            "expires_after_days": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["status", "expires_after_days"]
        },
        "evidence": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "confidence_weight": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "required": ["type", "url", "confidence_weight"]
          }
        },
        "corroboration": {
          "type": "object",
          "properties": {
            "independent_sources": { "type": "integer", "minimum": 0 },
            "source_types": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["independent_sources", "source_types"]
        },
        "suggested_actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": [
        "entity",
        "pain_category",
        "severity",
        "confidence",
        "first_seen",
        "last_confirmed",
        "impact",
        "relevant_roles",
        "time_sensitivity",
        "evidence",
        "corroboration",
        "suggested_actions"
      ]
    }
  }
}