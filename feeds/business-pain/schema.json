{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Pain Feed Envelope",
  "type": "object",
  "properties": {
    "feed_id": {
      "type": "string",
      "description": "Unique identifier for this feed."
    },
    "feed_version": {
      "type": "string",
      "description": "Semantic version of the feed schema."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this batch was generated (ISO 8601)."
    },
    "cadence": {
      "type": "string",
      "description": "Expected update frequency (e.g. hourly, daily)."
    },
    "confidence_method": {
      "type": "string",
      "description": "Free-form description of how confidence scores are derived."
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/BusinessPainItem"
      }
    }
  },
  "required": ["feed_id", "feed_version", "generated_at", "items"],
  "definitions": {
    "BusinessPainItem": {
      "type": "object",
      "properties": {
        "entity": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "name": { "type": "string" },
            "domain": { "type": "string" }
          },
          "required": ["type", "name"]
        },
        "pain_category": { "type": "string" },
            "references": {
          "type": "array",
          "items": { "type": "string" }
        },
        "severity": { "type": "number", "minimum": 0, "maximum": 10 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "signals": {
          "type": "array",
          "items": { "type": "string" }
        },
        "first_seen": { "type": "string", "format": "date" },
        "last_confirmed": { "type": "string", "format": "date" },
        "actionability": {
          "type": "object",
          "properties": {
            "urgency_days": { "type": "integer", "minimum": 0 },
            "budget_estimate_usd": {
              "type": "array",
              "items": { "type": "number", "minimum": 0 },
              "minItems": 2,
              "maxItems": 2
            }
          },
          "required": ["urgency_days", "budget_estimate_usd"]
        }
      },
      "required": ["entity", "pain_category", "severity", "confidence", "first_seen", "last_confirmed"]
    }
  }
}
